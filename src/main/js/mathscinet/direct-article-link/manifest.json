{
  "name": "Rewrite article links directly to PDF",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Rewrite article links directly to PDF",
  "content_scripts": [
    {
      "matches": ["http://www.ams.org/mathscinet*", "http://ams.rice.edu/mathscinet*", "http://ams.impa.br/mathscinet*", "http://ams.math.uni-bielefeld.de/mathscinet*", "http://ams.mpim-bonn.mpg.de/mathscinet*", "http://ams.u-strasbg.fr/mathscinet*", "http://www.ams.org.libproxy.mit.edu/mathscinet*"],
      "js": ["mathscinet.user.js"]
    },
  ],
  "permissions": [
    "http://arxiv.org/",
    "http://export.arxiv.org/*",
    "http://ams.org/*"
  ]
}
